<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_home"
            android:layout_width="wrap_content"
            android:layout_height="400dp"
            android:layout_marginTop="140dp"
            android:src="@drawable/main"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/recyclerView_main"
            android:layout_marginTop="130dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"/>

        <ImageView
            android:id="@+id/item_home"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="30dp"
            android:background="@android:color/transparent"
            android:src="@drawable/sheep"
            />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/yeah"
            android:text="My village :)"
            android:textColor="#000000"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="520dp"
            android:fontFamily="@font/yeah"
            android:text="      휴대폰 사용을 줄여 \n 나만의 마을을 꾸며보세요!"
            android:textColor="#000000"
            android:textSize="20dp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/menubar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/bt_first"
            android:layout_width="0dip"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/color_menu"
            android:gravity="center"
            android:src="@drawable/home" />

        <ImageButton
            android:id="@+id/bt_second"
            android:layout_width="0dip"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/color_menu"
            android:gravity="center"
            android:src="@drawable/cart" />

        <ImageButton
            android:id="@+id/bt_third"
            android:layout_width="0dip"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/color_menu"
            android:gravity="center"
            android:src="@drawable/box" />

        <ImageButton
            android:id="@+id/bt_fourth"
            android:layout_width="0dip"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/color_menu"
            android:gravity="center"
            android:src="@drawable/settings" />
    </LinearLayout>

</RelativeLayout>